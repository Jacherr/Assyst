{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2020",                          
    "module": "commonjs",                       
    "outDir": "./dist",                         
    "strict": true,                           
    "noImplicitAny": true,                    
    "alwaysStrict": true,                     
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "skipLibCheck": true
  },

  "include": ["src"],
  "exclude": ["node_modules"]
}
